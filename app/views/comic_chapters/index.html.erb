<div class = "admin-container">
  <div class = "admin-row">
    <div class = "admin-row">
      <div class = "new-chapter">
        <h1> ADD COMIC CHAPTER </h1>
        <%= render 'new_comic_chapter' %>
      </div>
    </div>
  </div>
  <div class = "admin-row">
    <div class = "admin-column">
      <div class = "chapter-table-container">
        <table class = "chapter-table">
          <tr>
            <th>Chapter cover </th>
            <th>Chapter number </th>
            <th>Chapter title </th>
            <th>Comic Title</th>
            <th> Show </th>
            <th> Edit </th>
            <th> Delete </th>
          </tr>

          <% @chapters.each do |chapter| %>
          <tr>
            <td><%= image_tag chapter.chaptercover.url(:thumb) %></td>
            <td><%= chapter.number %></td>
            <td><%= chapter.title %></td>
                <% bookId = chapter.comic_book_id %>
                <% comic = ComicBook.find_by(id: bookId) %>
            <td><%= comic.title %></td>
            <td><%= link_to "Show", comic_chapter_path(chapter) %></td>
            <td><%= link_to "Edit", edit_comic_chapter_path(chapter) %></td>
            <td><%= link_to "Destroy", comic_chapter_path(chapter), method: :delete %></td>

            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
