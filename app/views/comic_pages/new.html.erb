<div class = "admin-container">
  <div class = "admin-row">
    <div class = "admin-column">
      <div class = "new-comic">
        <h1> ADD NEW PAGE </h1>
      </div>
    </div>
  </div>
  <div class = "admin-row">
    <div class = "admin-column">
      <%= form_for @comic_page, html: { multipart: true} do |f| %>

        <%= f.label :number %>
        <%= f.text_field :number %></br>

        <%= f.label :tag1 %>
        <%= f.text_field :tag1 %></br>

        <%= f.label :tag2 %>
        <%= f.text_field :tag2 %></br>

        <%= f.label :tag3 %>
        <%= f.text_field :tag3 %></br>

        <%= f.label :chapter %>
        <%= f.collection_select :comic_chapter_id, @comic_chapters, :id, :title, include_blank: true %></br>

        <%= f.label :comicimage %>
        <%= f.file_field :comicimage %></br>

        <%= f.submit %>

      <% end %>
    </div>
  </div>
  <div class = "admin-column">
    <div class = "new-comic">
      <%= link_to 'Back', comic_pages_path %>
    </div>
  </div>
</div>
