<div class = "admin-container">
  <div class = "admin-row">
    <div class = "admin-column">
      <div class = "new-art">
        <h1> Add new Art</h1> </br>
        <%= render 'art_form' %>
      </div>
    </div>
  </div>

<div class = "admin-row">

  <div class = "admin-column">

    <div class = "art-table-container">
      <table class = "art-table">
        <tr>
          <th>Art id</th>
          <th>Image</th>
          <th>Art name   </th>
          <th>Art tag 1 </th>
          <th>Art tag 2 </th>
          <th>Art tag 3 </th>
          <th>Edit</th>
          <th>SHow</th>
          <th>Delete</th>
        </tr>
        <% @arts.each do |art| %>
        <tr>
        <td>  <%= art.id %> </td>
        <td>  <%= image_tag art.imageart.url(:thumb) %> </td>
        <td>  <%= art.name %> </td>
        <td>  <%= art.tag1 %> </td>
        <td>  <%= art.tag2 %> </td>
        <td>  <%= art.tag3 %> </td>
        <td>  <%= link_to 'Edit', edit_art_path(art) %> </td>
        <td>  <%= link_to 'Show', art_path(art) %></td>
        <td>  <%= link_to 'Delete', art_path(art), method: :delete %> </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
</div>
