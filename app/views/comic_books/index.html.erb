<div class = "admin-container">
  <div class = "admin-row">
    <div class = "admin-column">
      <div class = "new-comic">
        <h1>ADD NEW COMIC </h1>
        <%= render 'comic_book_form' %>
      </div>
    </div>
  </div>
  <div class = "admin-row">
    <div class = "admin-column">
      <div class = "chapter-table-container">
        <table class = "chapter-table">
          <tr>
            <th>Comic Cover Image </th>
            <th>Comic Title </th>
            <th>Show </th>
            <th>Edit </th>
            <th> Delete </th>
          </tr>
          <%  @comic_books.each do |comic| %>
            <tr>
              <td><%= image_tag comic.comiccover.url(:thumb) %></td>
              <td><%= comic.title %></td>
              <td><%= link_to 'Show', comic_book_path(comic) %></td>
              <td><%= link_to 'Edit', edit_comic_book_path(comic) %></td>
              <td><%= link_to 'Delete', comic_book_path(comic), method: :delete %></td>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
